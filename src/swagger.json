  "paths": {
    "/users/findEmail": {
      "post": {
        "tags": ["Usuários"],
        "summary": "Validar e-mail de usuario",
        "description": "Validar e-mail de usuario",
         "requestBody": {
           "content": {
             "application/json": {
               "schema": {
                 "type": "object",
                 "properties": {
                   "email": {
                     "type": "string"
                   }
                 },
                 "example": {
                   "email": "teste@teste.com.br"
                 }
               }
             }
           }
         },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Email Does not Exist"
          }
        }
      }
    },
